extends layout

block content
  .inner
    h2 #{title}
    form(method="POST", action="/account")
      label(for="name") Name
      input(type="text" name="name" value=user.name)
      label(for="email") E-mail address
      input(type="email" name="email" value=user.email)
      input.button(type="submit" value="Update account")
